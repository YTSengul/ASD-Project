<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>jar-with-dependencies-and-exclude-classes</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>${project.groupId}:ChunkingModule</include>
                <include>${project.groupId}:ConnectionModule</include>
                <include>${project.groupId}:EncryptionModule</include>
                <include>${project.groupId}:ServiceModule</include>
                <include>${project.groupId}:PersistenceModule</include>
                <include>${project.groupId}:SharedModule</include>
                <include>${project.groupId}:UIModule</include>
                <include>${project.groupId}:RouteModule</include>
            </includes>
            <binaries>
                <outputDirectory>/</outputDirectory>
                <unpack>true</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>
